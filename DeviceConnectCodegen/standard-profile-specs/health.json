							            "batteryLevel": -1,
							            "productName": "DUMMY DEVICE",
							            "hardwareRevision": "",
							            "partNumber": "",
							            "manufacturerName": "",
							            "serialNumber": "",
							            "protocolRevision": "",
							            "modelNumber": "",
